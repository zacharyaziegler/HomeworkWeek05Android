<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_color"
    tools:context=".Question1Activity">

    <TextView
        android:id="@+id/tv_q1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_q2"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.304" />

    <RadioGroup
        android:id="@+id/rg_q1"
        android:layout_width="224dp"
        android:layout_height="216dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.714">

        <RadioButton
            android:id="@+id/rb_q1_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rb_q2_1"
            android:textSize="25sp" />

        <RadioButton
            android:id="@+id/rb_q1_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rb_q2_2"
            android:textSize="25sp" />

        <RadioButton
            android:id="@+id/rb_q1_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rb_q2_3"
            android:textSize="25sp" />

        <RadioButton
            android:id="@+id/rb_q1_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rb_q2_4"
            android:textSize="25sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/tv_earned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_earned"
        android:textAlignment="center"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.116" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_confirm"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.898" />

</androidx.constraintlayout.widget.ConstraintLayout>